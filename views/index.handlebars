<div id="content">
<h1 id="title">Burgers</h1>

<div class = "flex-container">
<div id="uneaten-burgers">
<h2>Burgers available for devouring</h2>
   <ul>
    {{#each burgers}}
        {{#unless devoured}}
            <li>
                {{burger_name}}
                 <button class="devour-burger" data-id="{{id}}">
                    DEVOUR
                </button>
            </li>
        {{/unless}}
    {{/each}}
</ul> 
</div>

<div id = "eaten-burgers">
    <h2>Devoured Burgers</h2>
    <ul>
        {{#each burgers}}
            {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
            {{/if}}
        {{/each}}
    </ul>  
</div>

</div>

<div class = "burger-form">
    <h3>Build-a-Burger</h3>
    <form class="create-form">
        <div class="form-group">
            <label for="new-burger">Name Your Burger</label>
            <input type="text" id="new-burger" name="name">
        </div>

        <button type="submit" id="add-burger">Add Burger</button>
    </form>
</div>
</div>

